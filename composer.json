{
    "name":        "cpave3/php-unit-conversion",
    "description": "A fully PSR-4 compatible PHP library for converting between standard units of measure.",
    "keywords": [
         "measurement", "unit", "conversion"
     ],
    "homepage":    "https://github.com/cpave3/php-unit-conversion",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name":     "Cameron",
            "email":    "cpave3@gmail.com",
            "homepage": "https://github.com/cpave3/",
            "role":     "Developer"
        }
    ],
    "config": {
        "process-timeout": 0
    },
    "support": {
        "email":  "cpave3@gmail.com",
        "issues": "https://github.com/cpave3/php-unit-conversion/issues",
        "source": "https://github.com/cpave3/php-unit-conversion"
    },
    "require": {
        "php": ">=5.6.0",
        "myclabs/php-enum": "^1.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0|^6.0",
        "squizlabs/php_codesniffer": "^3.1",
        "php-coveralls/php-coveralls": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "PhpUnitConversion\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
             "PhpUnitConversionTest\\": "tests/"
        }
    },
    "scripts": {
        "cs": "vendor/bin/phpcs src/* tests/*",
        "test:standard": "vendor/bin/phpunit --testsuite Standard_Tests",
        "test:all": "vendor/bin/phpunit"
    }
}
